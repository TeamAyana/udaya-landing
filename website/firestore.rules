rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Waitlist: Allow public writes (form submissions)
    match /waitlist/{document} {
      allow read: if false;  // No public reads
      allow create: if true;  // Allow anyone to submit to waitlist
      allow update, delete: if false;
    }

    // Contacts: Allow public writes (form submissions)
    match /contacts/{document} {
      allow read: if false;  // No public reads
      allow create: if true;  // Allow anyone to submit contact forms
      allow update, delete: if false;
    }

    // Referrals: Allow public writes (form submissions)
    match /referrals/{document} {
      allow read: if false;  // No public reads
      allow create: if true;  // Allow anyone to submit referral forms
      allow update, delete: if false;
    }

    // Notifications: Only allow server-side access (via Admin SDK)
    match /notifications/{document} {
      allow read, write: if false;  // All access via Admin SDK only
    }

    // Newsletter: Allow public writes (subscriptions)
    match /newsletter/{document} {
      allow read: if false;  // No public reads
      allow create: if true;  // Allow anyone to subscribe
      allow update, delete: if false;
    }

    // All other collections: Deny all access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
